model UserChanel {
  id       Int     @default(autoincrement()) @id
  idUser   String
  idChanel String
}

model Catalog {
  id          Int     @default(autoincrement()) @id

  category String?
  username String?
  title String?

  link String?

  //сумарный дневной охват
  daily_reach Int?
  //индекс цитирования
  ci_index Int?
  //количество подписчиков
  participants_count Int?
  //Средний охват публикаций
  avg_post_reach Int?
  //количнсвто репостов в другие каналы
  forwards_count Int?
}

